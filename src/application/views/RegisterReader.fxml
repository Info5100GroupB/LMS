<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.RegisterReaderController">
    <VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">
        <Label text="Register New Reader" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <TextField fx:id="nameField" promptText="Full Name" maxWidth="250" minWidth="150" />
        <TextField fx:id="phoneField" promptText="Phone Number" maxWidth="250" minWidth="150" />

        <Button text="Register" onAction="#handleRegister" />
        <Button text="Back" onAction="#handleBack" />
    </VBox>
</StackPane>