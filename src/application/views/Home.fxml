<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.HomeController">
    <VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="20">
        
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Welcome to the Library Management System" />
        
        <Button fx:id="searchButton" onAction="#handleSearchButtonClick" prefHeight="40" prefWidth="200" text="Search Resources" />
      	<Button fx:id="addResourceButton" onAction="#handleAddResourceButtonClick" prefHeight="40" prefWidth="200" text="Add Resource" />

    </VBox>
</AnchorPane>
